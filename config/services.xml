<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />
        <service id="acme.service" class="Acme\AcmeBundle\Service\AcmeService" />
    </services>

    <service id="acme.acme_controller" class="Acme\AcmeBundle\Controller\AcmeController" public="true">
        <call method="setContainer">
            <argument type="service" id="Psr\Container\ContainerInterface"/>
        </call>
        <tag name="container.service_subscriber"/>
        <argument type="service" id="acme.acme_controller"/>
    </service>

</container>
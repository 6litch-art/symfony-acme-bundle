<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Autowire and autoconfigure in bundle is discouraged by the Symfony Core Team -->
        <!-- <defaults autowire="true" autoconfigure="true" public="false" /> -->

        <defaults public="false" />

        <!-- Controller declarations -->
        <service id="acme.controller" class="Acme\Bundle\Controller\AcmeController" public="true">
            <tag name="controller.service_arguments" />
            <call method="setContainer"><argument type="service" id="service_container" /></call>
            <argument type="service" id="acme.service" />
        </service>

        <!-- Listener declarations -->
        <service id="acme.listener" class="Acme\Bundle\Subscriber\AcmeListener">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <!-- Subscriber declarations -->
        <service id="acme.subscriber" class="Acme\Bundle\Subscriber\AcmeSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Service declarations -->
        <service id="acme.service" class="Acme\Bundle\Service\AcmeService" />

        <!-- Twig declarations -->
        <service id="acme.twig_extension" class="Acme\Bundle\Twig\AcmeTwigExtension" >
            <tag name="twig.extension" />
        </service>

        <!-- Repository services -->
        <service id="Acme\Bundle\Repository\AnvilRepository" class="Acme\Bundle\Repository\AnvilRepository">
           <tag name="doctrine.repository_service" />
           <argument type="service" id="doctrine" />
        </service>

    </services>
</container>
